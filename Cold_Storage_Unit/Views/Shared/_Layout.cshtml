<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;600&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        :root {
            --bg-light: #f8f9fa; /* light background */
            --bg-dark: #212529; /* dark background, matching your UI */
            --navbar-bg-light: var(--bg-light);
            --navbar-bg-dark: var(--bg-dark);
            /* ✅ Add this fallback so auto mode is light */
            --navbar-bg: var(--navbar-bg-light);
            --navbar-color: #000;
        }

        [data-bs-theme="light"] {
            --navbar-bg: var(--navbar-bg-light);
            --navbar-color: #000; /* text color */
        }

        [data-bs-theme="dark"] {
            --navbar-bg: var(--navbar-bg-dark);
            --navbar-color: #fff; /* text color */
        }

        /* Apply these to navbar */
        #mainNavbar {
            background-color: var(--navbar-bg) !important;
            color: var(--navbar-color);
        }

            #mainNavbar a, #mainNavbar .navbar-brand, #mainNavbar .navbar-nav .nav-link {
                color: var(--navbar-color);
            }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 220px;
            height: 100vh;
            background-color: var(--sidebar-bg) !important;
            color: var(--sidebar-text) !important;
            padding-top: 1rem;
            z-index: 1040;
        }

            .sidebar a {
                color: var(--sidebar-text) !important;
                text-decoration: none;
                display: block;
                padding: 0.75rem 1rem;
            }

                .sidebar a:hover {
                    background-color: rgba(255, 255, 255, 0.1);
                }

        /* Navbar */
        .navbar {
            background-color: var(--navbar-bg) !important;
            color: var(--navbar-text) !important;
        }

            .navbar .navbar-brand,
            .navbar .nav-link,
            .navbar .dropdown-toggle,
            .navbar .btn-outline-light {
                color: var(--navbar-text) !important;
            }

            .navbar .btn-outline-light {
                border-color: var(--navbar-text) !important;
            }

                .navbar .btn-outline-light:hover {
                    background-color: var(--navbar-text) !important;
                    color: var(--navbar-bg) !important;
                }


        /* Dropdown */
        .dropdown-item {
            color: var(--bs-body-color) !important;
        }

            .dropdown-item:hover {
                background-color: var(--bs-primary) !important;
                color: white !important;
            }

        /* Charts & cards */
        .card {
            background-color: var(--bs-body-bg);
            color: var(--bs-body-color);
        }

        /* Chart containers */
        .chart-wrapper {
            background-color: var(--bs-body-bg);
            border-color: var(--bs-border-color);
        }

        .btn-theme-toggle {
            border-color: var(--bs-primary);
            color: var(--bs-primary);
        }

            .btn-theme-toggle:hover {
                background-color: var(--bs-primary);
                color: #fff;
            }

        :root {
            --sidebar-text-light: #000; /* black text for light theme */
            --sidebar-text-dark: #fff; /* white text for dark theme */
        }

        [data-bs-theme="light"] nav.nav {
            color: var(--sidebar-text-light);
        }

        [data-bs-theme="dark"] nav.nav {
            color: var(--sidebar-text-dark);
        }

        /* Make sure the links inherit the color */
        nav.nav a {
            color: inherit;
            text-decoration: none;
        }

            /* Optional: hover effect */
            nav.nav a:hover {
                color: #0d6efd; /* bootstrap primary blue */
            }

            .sidebar a:hover,
            nav.nav a:hover {
                background-color: rgba(0, 123, 255, 0.1); /* Light blue background on hover */
                color: #0d6efd !important; /* Bootstrap primary color text */
                border-radius: 4px; /* Optional: slightly rounded highlight */
            }

        .nav-link.active {
            background-color: lightskyblue; /* Bootstrap primary color */
            color: white !important;
            border-radius: 4px;
        }

        .dropdown-header {
            font-weight: bold;
            color: #6c757d; /* muted */
            font-size: 0.9rem;
        }
    </style>

    @RenderSection("styles", required: false)
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg shadow-sm sticky-top px-3 border" id="mainNavbar" style="background: #6610f2;">
        <button class="btn btn-outline-light d-lg-none me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileSidebar" aria-controls="mobileSidebar">
            <i class="bi bi-list"></i>
        </button>

        <a class="navbar-brand fw-bold fs-4 mx-auto" href="#">Banana Cold Storage</a>

        <!-- User & Settings container -->
        <div class="d-flex align-items-center ms-auto gap-3 flex-wrap flex-lg-nowrap">

            <!-- Username -->
            <p class="fw-bold m-2 d-flex align-items-center">
                <i class="bi bi-person-circle me-2 fs-5 "></i>
                <span class="fw-bold">@Session["name"]</span> <!-- ✅ Always visible -->
            </p>
            <!-- Place this anywhere you want the theme switcher to show -->
            <div class="d-inline-flex align-items-center bg-body-tertiary rounded-pill px-3 py-1 shadow-sm">
                <i class="bi bi-sun-fill text-warning me-2 fs-5"></i>
                <div class="form-check form-switch m-0">
                    <input class="form-check-input" type="checkbox" id="themeToggleSwitch" onchange="toggleThemeSwitch()">
                </div>
                <i class="bi bi-moon-fill text-secondary ms-2 fs-5"></i>
            </div>
        </div>
    </nav>

    <!-- Mobile Sidebar: visible only on smaller screens -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="mobileSidebar" aria-labelledby="mobileSidebarLabel" style="max-width: 200px;">
        <div class="offcanvas-header border-bottom border-secondary">
            <span class="fw-bold fs-6 letter-spacing-1 ">
                <img src="~/Images/logo.jpg" alt="Elpro Logo" class="img-fluid mb-1" style="max-height: 12px;">  <span class="text-warning">Solutions</span>
            </span>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>

        <div class="offcanvas-body">
            <nav class="nav flex-column p-3">
                <a class="nav-link mb-3 d-flex align-items-center gap-3 fw-bold @(currentController == "ColdStorageUnit" ? "active" : "")" href="/ColdStorageUnit/Index">
                    <i class="bi bi-speedometer2 fs-5"></i>
                    <span>Dashboard</span>
                </a>
                <a class="nav-link mb-3 d-flex align-items-center gap-3 fw-bold @(currentController == "Reports" ? "active" : "")" href="/Reports/Index">
                    <i class="bi bi-bar-chart fs-5"></i>
                    <span>Reports</span>
                </a>
                <a class="nav-link mb-3 d-flex align-items-center gap-3 fw-bold @(currentController == "Account" ? "active" : "")" href="/Account/ManageUsers">
                    <i class="bi bi-person-plus fs-5"></i>
                    Register
                </a>
                <a class="nav-link mb-3 d-flex align-items-center gap-3 fw-bold @(currentController == "Settings" ? "active" : "")" href="#">
                    <i class="bi bi-gear fs-5"></i>
                    <span>Settings</span>
                </a>
            </nav>
        </div>
        <div class="p-3">
            <a class="nav-link mb-3 d-flex align-items-center gap-3 fw-bold" href="/Account/Login">
                <i class="bi bi-box-arrow-right fs-5"></i>
                <span>Logout</span>
            </a>
        </div>
    </div>

    <!-- Sidebar (Desktop only) -->
    <div class="d-none d-lg-flex flex-column position-fixed border"
         style="width: 210px; height: 100vh; top: 0; left: 0; z-index: 1040;">

        <!-- Wrapper for spacing -->
        <div class="d-flex flex-column justify-content-between flex-grow-1">

            <!-- Top Section -->
            <div>
                <!-- Sidebar Header -->
                <div class="d-flex align-items-center justify-content-between m-2">
                    <span class="fw-bold fs-5 letter-spacing-1 mt-2 mb-3">
                        <img src="~/Images/logo.jpg" alt="Elpro Logo" class="img-fluid mb-1" style="max-height: 17px;"> 
                        <span class="text-warning">Solutions</span>
                    </span>
                </div>
                <!-- Sidebar Nav -->
                <nav class="nav flex-column p-3">
                    <a class="nav-link mb-3 d-flex align-items-center gap-3 fw-bold @(currentController == "ColdStorageUnit" ? "active" : "")" href="/ColdStorageUnit/Index">
                        <i class="bi bi-speedometer2 fs-5"></i>
                        <span>Dashboard</span>
                    </a>
                    <a class="nav-link mb-3 d-flex align-items-center gap-3 fw-bold @(currentController == "Reports" ? "active" : "")" href="/Reports/Index">
                        <i class="bi bi-bar-chart fs-5"></i>
                        <span>Reports</span>
                    </a>
                    <a class="nav-link mb-3 d-flex align-items-center gap-3 fw-bold @(currentController == "Account" ? "active" : "")" href="/Account/ManageUsers">
                        <i class="bi bi-person-plus fs-5"></i>
                        Register
                    </a>
                    <a class="nav-link mb-3 d-flex align-items-center gap-3 fw-bold @(currentController == "Settings" ? "active" : "")" href="#">
                        <i class="bi bi-gear fs-5"></i>
                        <span>Settings</span>
                    </a>
                </nav>
            </div>

            <!-- Bottom Section: Logout -->
            <div class="p-3">
                <a class="nav-link mb-3 d-flex align-items-center gap-3 fw-bold" href="/Account/Login">
                    <i class="bi bi-box-arrow-right fs-5"></i>
                    <span>Logout</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="content mt-3 pt-0">
        @RenderBody()
    </div>

    <footer class="footer px-4 pt-4 mt-5 text-center text-muted" style="border-color: #dee2e6; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
        <div class="mb-2" style="font-size: 1.1rem;">
            Made with <i class="fas fa-heart"></i> by
            <strong>ELPRO Solutions</strong>
        </div>
    </footer>

    @RenderSection("scripts", required: false)
    <script>
        function toggleThemeSwitch() {
            const themeSwitch = document.getElementById('themeToggleSwitch');
            const isDark = themeSwitch.checked;
            const newTheme = isDark ? 'dark' : 'light';

            // Apply theme to the root element
            document.documentElement.setAttribute('data-bs-theme', newTheme);
            localStorage.setItem('theme', newTheme);

            updateNavbarTheme();
            applyCanvasBackground?.('envChart');   // optional
            applyCanvasBackground?.('envChart2');  // optional
        }

        function updateNavbarTheme() {
            const theme = document.documentElement.getAttribute('data-bs-theme') || 'light';
            const navbar = document.getElementById('mainNavbar');
            if (!navbar) return;

            navbar.classList.remove('bg-dark', 'bg-light', 'navbar-dark', 'navbar-light');
            if (theme === 'dark') {
                navbar.classList.add('bg-dark', 'navbar-dark');
            } else {
                navbar.classList.add('bg-light', 'navbar-light');
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            const savedTheme = localStorage.getItem('theme') || 'light';
            document.documentElement.setAttribute('data-bs-theme', savedTheme);

            const themeSwitch = document.getElementById('themeToggleSwitch');
            if (themeSwitch) themeSwitch.checked = savedTheme === 'dark';

            updateNavbarTheme();
        });
    </script>
</body>
</html>
